include "std/felix/pkgtool";
//$ Preforms build tasks in a way an App might like them done
BUILD_LIKE = App;
 
open PkgTool;
open Filename;

instance PkgTool {

  proc build () {
    task("Custom build for " + NAME);
    default_build();
  }

  proc install () {
    var bin_path = PREFIX.join("bin");
    default_install();
    cp_root(BUILD_DIR.join("bin"),"c2flx" + #Config::config.EXT_EXE,
      bin_path); 
  }

}

SetupTool::run();
